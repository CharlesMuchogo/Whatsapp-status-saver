<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.WhatsappFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:text="@string/direct_chat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/enter_country_code"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/inner_spacing"
            android:background="@drawable/background_radius"
            android:backgroundTint="#f1f1f1"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="@dimen/section_spacing"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/text_size_h5"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />
    </LinearLayout>






</RelativeLayout>



</FrameLayout>